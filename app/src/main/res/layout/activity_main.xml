<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:rowCount="24"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TFuser"
        android:layout_centerHorizontal="true"
        android:layout_column="2"
        android:layout_row="22"
        android:gravity="center_horizontal"
        android:text="Email"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/TFuser"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TFpassword"
        android:layout_alignStart="@+id/Blogin"
        android:text="Password"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/TFpassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Blogin"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/Blogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Bsignuph"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:text="LogIn"
        android:textSize="30dp" />

    <Button
        android:id="@+id/Bsignuph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/Blogin"
        android:onClick="onClick"
        android:text="SignUp Here" />

    <ImageView
        android:id="@+id/AppIcon"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/textView3"
        android:layout_alignParentStart="true"
        android:background="@drawable/mapicon"
        android:paddingTop="50dp"
        android:scaleType="centerCrop" />

</RelativeLayout>